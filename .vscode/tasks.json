{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Version and Push",
      "type": "shell",
      "command": "./version-bump.sh",
      "args": ["${input:versionBump}"],
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    }
  ],
  "inputs": [
    {
      "id": "versionBump",
      "type": "pickString",
      "description": "Select version bump type",
      "options": ["major", "minor", "patch"],
      "default": "patch"
    }
  ]
}
